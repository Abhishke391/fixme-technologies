                $today = date("j F Y");
                $day = date("j");
                $suffix = "";
                if ($day >= 11 && $day <= 13) {
                    $suffix = "th";
                } else {
                    switch ($day % 10) {
                        case 1:
                            $suffix = "st";
                            break;
                        case 2:
                            $suffix = "nd";
                            break;
                        case 3:
                            $suffix = "rd";
                            break;
                        default:
                            $suffix = "th";
                            break;
                    }
                }
                echo $day . $suffix . " " . date("F Y");
